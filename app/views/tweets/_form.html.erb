<div class="container-tweets">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10-tweets">
    <%= form_for(@tweet, url: choose_new_or_edit) do |f| %>
     <% if @tweet.errors.any? %>
      <div id="error_explanation">
       <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>
       <ul>
         <% @tweet.errors.full_messages.each do |msg| %>
           <li><%= msg %><li>
         <% end %>
       </ul>
      </div>
     <% end %>
    <div class="tweet-main">
      <div class="tweet-entries">
        <%= f.label :名前 %>
        <%= f.text_field :name, class: 'form-control'%>
        <br>
        <%= f.label :タイトル %>
        <%= f.text_field :title, class: 'form-control'%>
        <br>
        <%= f.label :コメント %>
        <%= f.text_field :comment, class: 'form-control'%>
        <br>
        <%= f.submit '投稿', class: 'btn btn-primary btn-block'%>
        <% end %>
      </div>
      <div class="tweet-entries-button">
        <%= link_to"Tweet一覧画面に戻る", tweets_path, class: 'btn btn-default btn-sm' %>
      </div>
    </div>
  </div>
</div>