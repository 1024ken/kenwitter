<div class="container-tweets">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10-tweets">
    <div class="contacts-comment"><h3>以下の内容で、送信する。</h3></div>
    <div class="contact-main">
      <div class="contact-entries">
        <%= form_for(@contact) do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :content %>
        <p>タイトル:<%= @contact.name %></p>
        <p>本文:<%= @contact.email %></p>
        <p>内容:<%= @contact.content %></p>
      </div>
      <div class="contact-entries-button">
        <%= f.submit "登録する",class: 'btn btn-primary btn-block'%>
      </div>
    </div>
    <% end %>
    <%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :content %>
      <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>